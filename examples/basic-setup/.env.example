# Claude Multitool Environment Configuration
# Copy to ~/.bashrc or ~/.zshrc

# Projects directory (where your code lives)
export CLAUDE_PROJECTS_DIR="$HOME/Projects"

# tmux session prefix (sessions named: prefix-projectname)
export TMUX_SESSION_PREFIX="claude-"

# Memory system
export HELIX_MEMORY_DIR="$HOME/.helix-memory"

# Optional: Remote Ollama server for embeddings
# export OLLAMA_REMOTE_URL="http://your-server:11434"

# Tool paths (auto-detected if not set)
# export PANE_STATUS="$HOME/.local/bin/pane-status"
# export MSG_TOOL="$HOME/.local/bin/msg"
